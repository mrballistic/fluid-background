{
  "name": "fluid-background",
  "version": "1.0.0",
  "description": "Interactive fluid simulation background component for Next.js applications",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "default": "./dist/index.esm.js"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "docs",
    "CHANGELOG.md",
    "CONTRIBUTING.md"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:rollup",
    "build:rollup": "rollup -c",
    "build:types": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "dev": "rollup -c -w",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:build": "npm run build && npm run test:exports",
    "test:exports": "node scripts/test-exports.mjs && node scripts/test-cjs.cjs",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "prepublishOnly": "npm run test:run && npm run build"
  },
  "keywords": [
    "react",
    "nextjs",
    "fluid",
    "simulation",
    "webgl",
    "background",
    "animation"
  ],
  "author": "Fluid Background Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/fluid-background.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/fluid-background/issues"
  },
  "homepage": "https://github.com/your-username/fluid-background#readme",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "jsdom": "^26.1.0",
    "rollup": "^3.0.0",
    "rollup-plugin-dts": "^6.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  }
}
