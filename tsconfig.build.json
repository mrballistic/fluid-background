  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
